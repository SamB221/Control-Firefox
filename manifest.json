{
  "manifest_version": 3,
  "name": "Control",
  "version": "1.0",

  "description": "Lets you take back control of your time",

  "icons": {
    "48": "icons/control_simple.svg"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["js/control.js"],
      "css": [
        "css/youtube/hide_elements.css",
        "css/youtube/main_page.css"
      ]
    },

    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["js/control.js"],
      "css": ["css/reddit/main_page.css"]
    }
  ]
}