{
  "manifest_version": 3,
  "name": "Control for Reddit",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.reddit.com/*", 
    "*://www.youtube.com/*"
  ],
  "description": "Lets you take back control of your time from Reddit by removing feeds",

  "browser_specific_settings": {
    "gecko": {
        "id": "extensionname@example.org"
    }
  },

  "icons": {
    "48": "icons/control_simple.svg"
  },

  "options_ui" : {
    "page": "options.html",
    "open_in_tab": true
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/control.js"],
      "css": [
        "css/youtube/hide_elements.css",
        "css/youtube/main_page.css"
      ]
    },

    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["js/control.js"],
      "run_at": "document_start",
      "css": ["css/reddit/not_logged_in.css"]
    }
  ],

  "web_accessible_resources": [{ 
    "resources": [
      "css/reddit/main_page.css",
      "css/reddit/not_logged_in.css",
      "css/reddit/notifications.css",
      "css/reddit/subreddits.css",
      "css/reddit/trending.css"
    ],
    "matches": ["*://*.reddit.com/*"]
  }]
}